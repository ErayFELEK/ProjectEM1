<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <ImageButton
            android:layout_width="46dp"
            android:layout_height="48dp" tools:srcCompat="@tools:sample/avatars[10]"
            android:id="@+id/entry_pp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/entry_username"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/entry_pp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.046"
            app:layout_constraintTop_toTopOf="@+id/entry_pp" app:layout_constraintBottom_toBottomOf="@+id/entry_pp"/>
    <TextView
            android:text="uzun bir entryuzun bir entryuzun bir entryuzun bir entryuzun bir entryuzun bir entryuzun bir entryuzun bir entryuzun bir entryuzun bir entryuzun bir entryuzun bir entryuzun bir entryuzun bir entryuzun bir entryuzun bir entryuzun bir entryuzun bir entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entry_textcontent"

            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/entry_pp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/like_button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/entry_textcontent"
    />
    <Button
            android:text="comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/comment_button"
            app:layout_constraintStart_toEndOf="@+id/like_button" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/like_button"
            app:layout_constraintTop_toTopOf="@+id/like_button"/>
    <Button
            android:text="share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/share_button"
            app:layout_constraintStart_toEndOf="@+id/comment_button" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/comment_button"
            app:layout_constraintTop_toTopOf="@+id/comment_button"/>
    <Button
            android:text="report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/report_button"
            app:layout_constraintStart_toEndOf="@+id/share_button" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/share_button"
            app:layout_constraintTop_toTopOf="@+id/share_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>