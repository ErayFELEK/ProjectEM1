<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
                                                   tools:context=".entry_related.WriteNewEntryFragment">


    <androidx.appcompat.widget.AppCompatEditText android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 app:layout_constraintStart_toStartOf="parent"
                                                 android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                                                 app:layout_constraintEnd_toEndOf="parent"
                                                 android:layout_marginTop="8dp"
                                                 app:layout_constraintTop_toTopOf="parent"
                                                 android:id="@+id/new_entry_text_input"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/send_entry"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/new_entry_text_input" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>